{
	"name": "cli-error-notifier",
	"version": "0.0.0",
	"description": "Send native desktop notifications when CLI apps fail",
	"license": "MIT",
	"repository": "micromata/cli-error-notifier",
	"author": {
		"name": "Michael KÃ¼hnel",
		"email": "m.kuehnel@micromata.de",
		"url": "micromata.de"
	},
	"bin": {
		"onerror": "cli.js"
	},
	"engines": {
		"node": ">=4"
	},
	"scripts": {
		"test": "npm run lint && nyc ava",
		"lint": "eslint --cache --ignore-path .gitignore .",
		"lint:fix": "npm run lint --silent -- --fix",
		"release": "nsp check && standard-version --tag-prefix",
		"release:patch": "npm run release --silent -- --release-as patch",
		"release:minor": "npm run release --silent -- --release-as minor",
		"release:major": "npm run release --silent -- --release-as major"
	},
	"files": [
		"index.js",
		"cli.js"
	],
	"keywords": [
		"cli-app",
		"cli",
		"error",
		"error-handling",
		"notifications",
		"notify"
	],
	"dependencies": {
		"execa": "^0.9.0",
		"log-symbols": "^2.2.0",
		"meow": "^3.7.0",
		"node-notifier": "^5.2.1"
	},
	"devDependencies": {
		"ava": "^0.20.0",
		"codecov": "^2.2.0",
		"eslint": "^4.16.0",
		"eslint-config-xo": "^0.19.0",
		"eslint-plugin-filenames": "^1.2.0",
		"eslint-plugin-security": "^1.4.0",
		"eslint-plugin-unicorn": "^3.0.1",
		"nsp": "^3.1.0",
		"nyc": "^11.0.0",
		"standard-version": "^4.3.0"
	},
	"nyc": {
		"reporter": [
			"lcov",
			"text"
		]
	}
}
